<launch>
    <node pkg="rviz"
        type="rviz"
        name="rviz"
        args="-d $(find simulator_prototype)/config/rviz/config.rviz" />
        
    <rosparam command="load" file="$(find simulator_prototype)/config/models/Jolner.yaml" />

    <param name="hil/robot_description" textfile="$(find simulator_prototype)/config/models/Odin.urdf" />


    <node pkg="joy" name="joy_node" type="joy_node" respawn="false" output="screen">
    </node>

    <node pkg="ps3thrustInput" name="Ps3Node" type="ps3_thrust_input" respawn="false" output="screen">
    </node>
    
    <node pkg="simulator_prototype" type="hil_simulator_node" name="vessel_state_publisher" output="screen"/>

    <node pkg="rosbag" type="record" name="rosbag_record_run"
       args="record -o $(find simulator_prototype)/logs/run.bag hil_sim/log/thrust hil_sim/log/state hil_sim/log/velocity tf"/>
	
     
</launch>